root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.{yml, yaml}]
indent_size = 2

[*.sh]
indent_size = 4

[*.java]
indent_size = 4

[*.groovy]
indent_size = 4

[*.gradle]
indent_size = 4

[*.py]
indent_size = 4

[*.sql]
indent_size = 4

[*.js]
indent_size = 4

[*.css]
indent_size = 4

[*.html]
indent_size = 4
